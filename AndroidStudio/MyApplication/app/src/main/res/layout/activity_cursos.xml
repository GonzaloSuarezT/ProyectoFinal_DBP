<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Cursos">

    <Button
        android:id="@+id/curso1"
        android:textSize="24sp"
        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="#4F4C79AF"
        android:text="Maths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/curso2"
        android:backgroundTint="#4F4C79AF"
        android:textSize="24sp"

        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="40dp"
        android:text="Literature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/curso3"
        android:backgroundTint="#4F4C79AF"
        android:textSize="24sp"

        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso1" />

    <Button
        android:id="@+id/curso4"
        android:backgroundTint="#4F4C79AF"
        android:textSize="23sp"

        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="Chemistry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso2" />

    <Button
        android:id="@+id/curso5"
        android:backgroundTint="#4F4C79AF"
        android:textSize="24sp"

        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Physics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso3" />

    <Button
        android:id="@+id/curso6"
        android:backgroundTint="#4F4C79AF"
        android:textSize="21sp"

        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:text="Geography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>