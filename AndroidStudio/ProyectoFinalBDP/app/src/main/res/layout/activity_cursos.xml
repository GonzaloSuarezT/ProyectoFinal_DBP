<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cursos">


    <Button
        android:id="@+id/curso1"
        android:layout_width="152dp"
        android:layout_height="119dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="32dp"
        android:text="Curso1"
        app:layout_constraintEnd_toStartOf="@+id/curso2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/curso2"
        android:layout_width="152dp"
        android:layout_height="119dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:text="Curso2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/curso3"
        android:layout_width="152dp"
        android:layout_height="119dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="44dp"
        android:text="Curso3"
        app:layout_constraintEnd_toStartOf="@+id/curso4"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso1" />

    <Button
    android:id="@+id/curso4"
    android:layout_width="152dp"
    android:layout_height="119dp"
    android:layout_marginTop="46dp"
    android:layout_marginEnd="24dp"
    android:text="Curso4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/curso2" />

    <Button
        android:id="@+id/curso5"
        android:layout_width="152dp"
        android:layout_height="119dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="34dp"
        android:text="Curso5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curso3" />

    <Button
        android:id="@+id/curso6"
        android:layout_width="152dp"
        android:layout_height="119dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="174dp"
        android:text="Curso6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>